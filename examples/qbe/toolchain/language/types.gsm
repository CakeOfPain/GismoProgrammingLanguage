ref(TYPE) ::= {
    refTypeRaw ::= $2
    refType ::= $UNTYPE(refTypeRaw)
    typeId ::= $SYMCAT(ref_, refType.id)

    template ::= $QUOTE($TYPEDEF($Type(
        typeId, // id
        "", // prefix
        "l", // nativeType
        "l", // nativeMemoryType
        VALUE_REF, // typeName
        $NIL(), // constantType
        refTypeRaw, // metaData
        8 // memory_size 
    ), T, TYPE))

    $EVAL($REPLACE(template, T, typeId))
}

